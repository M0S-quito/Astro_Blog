---
import Topbar from './Topbar.astro';
import "../styles/global.css";
---

<header class="sticky-header">
	<!-- 상단 고정 토글 버튼 -->
	<button
		class="toggle-topbar"
		aria-label="Open topbar"
		onclick="window.toggleTopbar && window.toggleTopbar()"
	>
		M0S_quito
	</button>
	<Topbar />
</header>

<style>
/* ===== 상단 고정 헤더 ===== */
.sticky-header {
	position: fixed;
	top: 0;
	left: 20px;
	width: 100%;
	height: 50px;
	background: base-bg;
	box-shadow: 0 2px 8px rgba(var(--black), 0.05);
	z-index: 2000;

	display: flex;
	align-items: center;
	justify-content: flex-start;
	padding: 0 1em;
}

/* ===== 버튼 스타일 ===== */
.toggle-topbar {
	border: none;
	background: transparent;
	cursor: pointer;
	color: var(--black);
	font-size: 0.75rem;
	line-height: 50px;
	padding: 0;
}

/* ===== 불필요한 요소 제거 후 깨짐 방지 ===== */
.sticky-header * {
	font-family: var(--font-mono, monospace);
}

/* ===== 작은 화면 대응 ===== */
@media (max-width: 720px) {
	.toggle-topbar {
		font-size: 0.7rem;
	}
}
</style>
